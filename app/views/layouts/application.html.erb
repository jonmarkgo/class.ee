<!DOCTYPE html>
<html>
<head>
  <title>Class.ee</title>
  <%= stylesheet_link_tag "960" %>
  <%= stylesheet_link_tag "style" %>
  <%= stylesheet_link_tag "smoothness/jquery-ui-1.8.7.custom.css" %>
  <!--[if lte IE 7]>
    <%= stylesheet_link_tag "ie" %>
  <![endif]-->
  
  <%= javascript_include_tag :defaults %>
  <!--[if lt IE 9]>
    <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
  <%= csrf_meta_tag %>
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
</head>
<body>
  <div id="wrapper" class="container_12">
    <header id="header" class="grid_12">
      <h1><%= link_to "class.ee", root_path %></h1>
    </header> <!-- end header -->
  
    <div id="content">
      <nav>
        <ul id="menu" class="clearfix"> 
          <li class="current">
            <%= link_to 'Home', root_path, :class => current_class?(root_path) %>
          </li>
          <li>
            <%= link_to 'Professors', professors_path, :class => current_class?(professors_path) %>
          </li>
          <li>
            <%= link_to 'Evaluate', professor_ratings_path, :class => current_class?(professor_ratings_path) %>
          </li>
          <li>
          <%=
            link_to_if(@current_user.nil?, "Login", new_user_session_path) do
              link_to(@current_user.email, new_user_registration_path)
            end
          %>
          </li>
        </ul>
        <br class="clear" />
      </nav>
      <!--[if lte IE 7]>
        <div class="ie grid_7"></div>
      <![endif]-->
      <div id="main" class="grid_8 alpha">
        <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
        <%= yield %>
      </div> <!-- end main -->
      <div id="sidebar" class="grid_4 omega">
        <aside class="widget">
          <h3>Recent Ratings</h3>
        </aside> <!-- end widget -->
        
        <aside class="widget">
            <!-- Non working search -->
            <form action="">
                <input type="search" results="10" placeholder="Find a Professor..." />
                <input type="submit" value="Search..." />
            </form>
        </aside> <!-- end widget -->
        
        <aside class="widget">
            <h3>Something</h3>
            
            <p>
                Blah blah blah
            </p>
        </aside> <!-- end widget -->
    
    </div> <!-- end sidebar -->
    
    </div> <!-- end content -->
    
    <footer id="footer" class="grid_12">
        <!-- You're free to remove the credit link in the footer, but please, please leave it there. -->
        <p>Copyright &copy; 2010 <a href="#">class.ee</a></p>
    </footer> <!-- end footer -->
    
    <div class="clear"></div>

</div> <!-- end wrapper -->

</body>
</html>
